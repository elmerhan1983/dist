<%- include('partials/head') %>
<%- include('partials/header') %>
<main class="section">
  <div class="container form-container">
    <h1><%= siteSettings.inquiry.title %></h1>
    <p><%= siteSettings.inquiry.description %></p>
    <form id="inquiryForm" class="form-grid" data-inquiry-form data-status-target="inquiryStatus">
      <input type="hidden" name="productId" value="<%= selectedProductId || '' %>" />
      <input type="hidden" name="productName" value="<%= selectedProductName || '' %>" />
      <label>Name* <input name="name" required /></label>
      <label>Company <input name="companyName" /></label>
      <label>Email* <input type="email" name="email" required /></label>
      <label>Phone <input name="phone" /></label>
      <label>Product Interest
        <select name="productInterest">
          <% products.forEach((product) => { %>
          <option <%= selectedProductName === product.name ? 'selected' : '' %>><%= product.name %></option>
          <% }) %>
          <option>Other</option>
        </select>
      </label>
      <label class="full">Message* <textarea name="message" rows="6" required></textarea></label>
      <button type="submit" class="btn btn-primary">Submit Inquiry</button>
      <p id="inquiryStatus" class="form-status"></p>
    </form>
  </div>
</main>
<%- include('partials/floating-contact') %>
<%- include('partials/footer') %>
